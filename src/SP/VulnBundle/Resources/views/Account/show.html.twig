{% extends 'VulnBundle:Account:layout.html.twig' %}

{% block body %}
    <h1>Accounts</h1>
    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            <div class="alert alert-{{ label }}">
                <a href="" class="close" data-dismess="alert">&times;</a>
                <strong>{{ flash }}</strong>
            </div>
        {% endfor %}
    {% endfor %}
    <div>
        <a href="{{ path('account_new', {'userId': user.id}) }}" class="btn btn-primary" data-toggle="modal">Create new account</a>
    </div>
    <br>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>Account</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {% for account in user.accounts %}
            <tr>
                <td><a href="{{ path('transaction_show', {'accountNumber': account.accountNumber}) }}">{{ account.accountNumber|mask }}</a></td>
                <td>{{ account.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}